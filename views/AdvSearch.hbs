                    {{!-- {{ddCountries}} --}}
                    <br /><br />
                    <label>Location</label>
                    <br />
                    <input name="txtLocation" placeholder="Location" />
                    
                    
                </div>
                <div class="col-md-5">

                    <label>Status</label>
                    <br />
                    {{!-- Active, Split-up, Unknown, On hold, Changed name, --}}
