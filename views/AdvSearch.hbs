                    <select disabled="true" id="ddStatus">
                        <option value="Any">Any</option>
                        <option value="Active">Active</option>
                        <option value="On hold">On hold</option>
                        <option value="Changed name">Changed name</option>                        
                        <option value="Split-up">Split-up</option>
                        <option value="Unknown">Unknown</option>
                    </select>
                    {{!-- <input name="txtStatus" placeholder="Status"/> --}}
                    <br /><br />
                    <label>Themes</label>
                    <br />
                    <input name="txtThemes" placeholder="Themes" />
                    <br /><br />
                    <label>Label</label>
                    <br />
                    <input name="txtLabel" placeholder="Record Label" />
                    <br /><br />
                    <label>Formed between</label><br/>
                    <div class="row">
                        <div class="col-md-3">                            
                            <input type="date" name="txtYearCreationFrom" style="width:160px" placeholder="Date" /> <label>and</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">                            
                            <input type="date" name="txtYearCreationTo" style="width:160px" placeholder="Date" />
                        </div>
                    </div>                    
                </div>
            </div>
            </div>
        <br/><br/><br/>
        <div class="row">
            <div class="col-md-5"> 
                <button type="submit" class="btn btn-outline-light">Submit</button>
                <br/>
            </div>
            
            <div class="col-md-5">
                <button type="reset" class="btn btn-light">Clear</button>
            </div>
        </div>        
            </form>
        </div>        
    </body>
</html>



