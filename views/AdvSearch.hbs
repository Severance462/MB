    <body>
        {{>navAlt}}
        <div class="container">
            <div class="row">
                <h2>Advanced Search</h2>
            </div>
            <form action="/AdvResults" method="POST" style="margin: 10px">  
            <div id="ASForm">
                <h4>By Band</h4>   
            <div class="row">           
                
                <div class="col-md-5">

                    <label>Band Name</label>
                    <br />
